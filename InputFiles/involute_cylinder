type rayVolPhysicsPackage;

pop       20000;
cycles    100;
mfp       3.2;
abs_prob  0.005;
robust 1;
cache 0;


geometry {
  type geometryStd;
  boundary (2 2);
  graph {type shrunk;}
  root  1;

  surfaces {
    domain { id 1; type zTruncCylinder; origin (0.0 0.0 0.0); halfwidth 20.0; radius 10.0; }
  }

  cells {
  }

  universes {
    domain { id 1; type rootUniverse; border 1; fill u<2>; }
    lat {
      id 2;
      type involuteUniverse;
      baseRadius 0.5;      // radius of the circle defining the involutes
      hubRadius  1.0;      // radius of the central cylinder (larger than baseRadius)
      numPlates 10;        // Number of fuel plates
      plateThickness 0.1;  // Thickness of the fuel plates, measured on a tangant from base circle
      cladThickness 0.05;  // (Optional) Thickness of the cladding
      plateFill fuel;
      cladFill Al;         // (Optional) Fill material for the cladding
      hubFill Al;
      channelFill water;
    }
  }
}

viz {
  bmp {
    type bmp;
    output img;
    what material;
    centre (0.0 0.0 0.0);
    axis z;
    res (5000 5000);
  }
}


nuclearData {
  handles { }
  materials {
    water { temp 13; composition { } }
    fuel  { temp 1;  composition { } }
    Al    { temp 0;  composition { } }
  }
}
